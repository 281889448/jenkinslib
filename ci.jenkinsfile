#!groovy

String mvnoptions = "${env.mvnoptions}"

pipeline{
    agent { node { label "build"} }
    
    stages{
      stage("maven build"){
        steps{
          script{
              mvnhome = tool "mvn"
              sh "${mvnhome} ${mvnoptions}"
          }
        }
      }
    
      stage("ant build"){
        steps{
          script{
              anthome = tool "ant"
              sh "${anthome} -v"
                }
            }
        }
	}
}
